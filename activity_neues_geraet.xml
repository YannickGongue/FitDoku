<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.example.thejoega.fitdoku.neues_geraet">


    <TextView
        android:id="@+id/NeuesGeraet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="neues Geraet"
        android:textSize="30sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/NummerNeuesGereat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Seriesnummer:"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/editText"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editNummGeraet"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/pr_name"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/NeuesGeraeteName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="GeraetsName:"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editNeuesGeraetName"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@+id/pr_alter"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/NeueGeraetEigen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Eigenschaften:"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editNeuesGeraetEigen"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@+id/pr_alter"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/NeueGeraetAnsatz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ansatz:"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editneueGeraeteAnsatz"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/pr_alter"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/NeueGeraetDatum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Datum:"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editNeueGeraetDatum"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="date"
            app:layout_constraintStart_toEndOf="@+id/pr_alter"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp">

        <Button
            android:id="@+id/AddBtnGeraet"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimary"
            android:text="Speichern"
            android:textSize="25sp" />

        <Button
            android:id="@+id/AbbrbtnGeraet"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimary"
            android:text="SchlieÃŸen"
            android:textSize="25sp" />
    </LinearLayout>


</LinearLayout>