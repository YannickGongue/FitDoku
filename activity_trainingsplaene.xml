<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="com.example.thejoega.fitdoku.neues">

    <Button
        android:id="@+id/at_tpln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#0B610B"
        android:text="Ausdauertraining"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/n_ueb"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="81dp" />

    <Button
        android:id="@+id/kt_tpln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#0B610B"
        android:text="Krafttraining"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/n_gr"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="118dp" />

    <Button
        android:id="@+id/vt_tpln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#0B610B"
        android:text="Vibrationstraining"
        android:textColor="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="297dp" />

    <Button
        android:id="@+id/st_tpln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#0B610B"
        android:text="Sonstiges Training"
        android:textColor="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="297dp" />
</LinearLayout>
